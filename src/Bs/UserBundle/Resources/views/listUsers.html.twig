{% extends '::admin_base.html.twig' %}
{% block body %}
    <script type="text/javascript">
        var lolz;
        function onload() {
            lolz = document.getElementById('lolz');
        }

        function kk() {
            if (lolz.value != "") {
                window.location.assign("http://buss.md/app_dev.php/admin/view/routes/" + lolz.value);
            }else
            { window.location.assign("http://buss.md/app_dev.php/admin/view/routes");}
        }
    </script>

    <body onload="onload();">
    <h2>Filter:</h2>
    <input type="text" name="enter" class="" value="{{ filter }}" id="lolz" style="width:20%"/>

    <i class="fa fa-search" onclick="kk();"></i>

    </body>

    <table class="table table-inverse">
        <thead>
        <tr>
            <th>Operations</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Released At</th>

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a class="fa fa-edit" href="{{ path('edit_user',{'id':user.id}) }}"> </a>
                    <a class="fa fa-trash-o" href="{{ path('delete_user',{'id':user.id}) }}"
                       onclick="return confirm('Do you want to delete this user?')"></a>

                </td>
                <td>{{ user.name }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.releasedAt |date("m/d/Y") }}</td>
                <td>
                    <a class="btn btn-default btn-block" href="#">view</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}