<div class="container text-center" xmlns="http://www.w3.org/1999/html">
    <div class="row">
        {{ form_start(form) }}
        <div class="col-sm-12 ">

            <div class="col-sm-3 well">
                <div class="well">
                    <h1>Stations</h1>
                    {% for rs in routeStations %}
                        <h2>{{ rs.station.name }}</h2>
                        <h2>|</h2>
                    {% endfor %}
                    <h2>home</h2>
                </div>
            </div>

            <div class="col-sm-7">
                <div class="well">

                    {{ form_row(form.fromStation,{'attr':{'class':'form-control'}}) }}
                    {{ form_row(form.toStation,{'attr':{'class':'form-control'}}) }}
                </div>

            </div>
            <div class="col-sm-2 well">

                <ul class="checkbox-grid">
                    <div class="place-selector">
                        <li>
                            {{ form_row(form.places) }}

                        </li>
                    </div>

                </ul>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-default">Save</button>

    {{ form_end(form) }}

</div>
</div>

<style>
    .checkbox-grid li {
        display: block;
        width: 150px;
        float: right;
        height: auto;
    }

    input[type=checkbox]:checked + label {
        background: #d72526;
        color: #ffffff;
    }

    .place-selector input {
        display: none !important;
    }
    .place-selector-red  {
        background: #d72526;
    }
    .place-selector input[type=checkbox] + label {
        display: inline-block;
        border-radius: 6px;
        background: #dddddd;
        height: 40px;
        width: 30px;
        margin-right: 3px;
        line-height: 40px;
        text-align: center;
        cursor: pointer;
    }

    .place-selector input[type=checkbox]:checked + label {
        background: #2AD705;
        color: #ffffff;
    }

    .displayNone {
        display: none;
        color: #ffffff;
    }

</style>