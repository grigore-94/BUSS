{% extends 'base.html.twig' %}

{% block body %}




    <div class="col-sm-12">
        <div class="row">

            <div class="col-sm-12">
                <div class="well">
                    <h4>Route</h4>
                    <h3> {{ itemRoute.route.from.getUniqueName }} >>> {{ itemRoute.route.to.getUniqueName }}</h3>
                    <br>
                </div>
            </div>
            <div class="col-sm-4">

                <div class="well">
                    <h1><img src="" class="img-responsive" style="width:100%"
                             alt="Image">
                    </h1>
                </div>
            </div>
            <br>


            <div class="col-sm-8">
                <div class="well">
                    <p>Trip time: {{ itemRoute.route.totalTime|date('H:i') }} <i class="fa fa-clock-o" aria-hidden="true"></i>
                    </p>
                    <p>Trip distance: {{ booking.totalDistance }}    </p>
                    <p>Nr Tikets : {{ booking.nrTickets }} </p>
                    <p>Price : {{ booking.price }} MDL</p>
                    <p>From Station : {{ booking.fromStation.station.name }} </p>
                    <p>To Station : {{ booking.toStation.station.name }} </p>

                    <br>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="well">
                    <h1>Category : </h1>
                    <br>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="well">
                    <h1>POH</h1>


                    <br>
                </div>
            </div>


        </div>
    </div>


{% endblock %}