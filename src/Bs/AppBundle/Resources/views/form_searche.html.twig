<div class="order-now s-bg-c">
    <h1>Order your route</h1>

    {{ form_start(form) }}


    <div class="form-group">
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                {{ form_row(form.from,{'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(form.f,{ 'attr': {'class': 'form-control', 'placeholder': 'From'} }) }}

            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                {{ form_row(form.t,{ 'attr': {'class': 'form-control', 'placeholder': 'To'} }) }}
                {{ form_row(form.to,{'attr': {'novalidate': 'novalidate'}}) }}
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="cols-sm-10">
            <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar fa"
                                                                       aria-hidden="true"></i></span>
                {{ form_row(form.atDate,{ 'attr': {'class': 'form-control', 'placeholder': 'To'} }) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="cols-sm-10">

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-clock-o fa" aria-hidden="true"></i></span>

                {{ form_row(form.atTime,{ 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>


        <div class="d-bg-c submit-search">
            <div class="relative inline-block">
                <i class="fa fa-chevron-circle-right"></i>
                <input type="submit" value="Submit" class="form-send">
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
